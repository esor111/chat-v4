# Application
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=root
DB_PASSWORD=root
DB_NAME=chat_backend_new
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=10000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_CLUSTER_ENABLED=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# External JWT (from kaha-main-v3)
EXTERNAL_JWT_SECRET=kaha-main-v3-jwt-secret-here
EXTERNAL_JWT_VERIFY=false

# External Services
KAHA_MAIN_V3_BASE_URL=http://localhost:3001
KAHA_MAIN_V3_SERVICE_TOKEN=your-service-token
KAHA_MAIN_V3_TIMEOUT=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000